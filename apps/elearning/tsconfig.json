{
  "extends": "@repo/tsconfig/nextjs",
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
      "config/*": ["./config/*"],
      "supabase/*": ["./supabase/*"],
      "@/*": ["./src/*"],
      "#rte/*": ["./src/components/ui/rich-text-editor/*"]
    },
    "noEmit": true,
    "types": ["node"]
  }
}
